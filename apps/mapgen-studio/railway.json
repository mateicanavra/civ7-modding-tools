{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bunx turbo run build --filter=mapgen-studio",
    "watchPatterns": [
      "apps/mapgen-studio/**",
      "packages/**",
      "mods/**",
      "apps/mapgen-studio/railway.json",
      "bun.lock",
      "bunfig.toml",
      "package.json",
      "turbo.json",
      "tsconfig.base.json",
      "tsconfig.json",
      "tsconfig.plugins.json"
    ]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "cd apps/mapgen-studio && caddy run --config Caddyfile --adapter caddyfile",
    "limitOverride": {
      "containers": {
        "cpu": 2,
        "memoryBytes": 4000000000
      }
    },
    "sleepApplication": true,
    "multiRegionConfig": {
      "us-east4-eqdc4a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
